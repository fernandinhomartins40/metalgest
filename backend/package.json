    "@types/crypto-js": "^4.2.1",
    "@types/morgan": "^1.9.9",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "prisma": "^5.6.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
