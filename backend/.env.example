# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./src/database/sqlite.db

# JWT Configuration
JWT_SECRET=metalgest-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=metalgest-refresh-secret-key-change-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=http://localhost:3001

# Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Logs Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Encryption (optional)
ENCRYPTION_KEY=metalgest-encryption-key-32-chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=20

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Development
DEBUG_SQL=false
