{
  "name": "metalgest",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/web",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd apps/web && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd apps/web && npm run build",
    "build:backend": "cd backend && npm run migrate",
    
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd apps/web && npm run preview",
    "start:backend": "cd backend && npm start",
    
    "lint": "cd apps/web && npm run lint",
    "type-check": "cd apps/web && npm run type-check",
    
    "backend:migrate": "cd backend && npm run migrate",
    "backend:seed": "cd backend && npm run seed",
    "backend:test": "cd backend && npm test",
    
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "@types/node": "^20.8.3",
    "concurrently": "^8.2.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.0.0"
}